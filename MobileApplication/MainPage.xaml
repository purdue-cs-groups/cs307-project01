                                         Message="pictureID" Style="{StaticResource SmallHubTile}" />
                        <toolkit:HubTile Grid.Row="5" Grid.Column="1" 
                                         Name="popTile10"
                                         Margin="12,12,0,0"
                                         Source="/Images/windowsphone.jpg"
                                         Title="Windows Phone"
                                         Notification="Love me some Mango!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="pictureID" Style="{StaticResource SmallHubTile}" />
                        <toolkit:HubTile Grid.Row="5" Grid.Column="2" 
                                         Name="popTile100"
                                         Margin="12,12,0,0"
                                         Source="/Images/windowsphone.jpg"
                                         Title="Windows Phone"
                                         Notification="Love me some Mango!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="pictureID" Style="{StaticResource SmallHubTile}" />
                    </Grid>
                </controls:PanoramaItem>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <!--NEWS FEED-->
                <controls:PanoramaItem Header="recent">
                    <ListBox Name="feed" IsEnabled="True" IsHitTestVisible="True" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,0,0,75">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Margin="20,0,0,0" Height="65" HorizontalAlignment="Left" Name="recentPictureOwner" Stretch="UniformToFill" VerticalAlignment="Top" Width="65" Source="/WinstagramPan;component/Images/smallJoe.png" Tap="ViewUserDetailTap" />
                                    <TextBlock Margin="118,17,0,0" Text="{Binding Username}"  Height="38" Name="recentPictureUsername" VerticalAlignment="Top" FontSize="26" Foreground="{StaticResource PhoneAccentBrush}" Tap="ViewUserDetailTap" />
                                    <TextBlock Text="3 hours ago" Margin="0,25,0,0"  Height="38" Name="recentPictureTime" VerticalAlignment="Top" FontSize="16"  HorizontalAlignment="Right" Foreground="{StaticResource PhoneBorderBrush}" />
                                    <Image Margin="20,80,0,0"  Source="{Binding Photo.Source}"  Height="460" HorizontalAlignment="Left" Name="recentPicture" Stretch="UniformToFill" VerticalAlignment="Top" Width="460" Tag="{Binding PictureID}" />
                                    <Grid Margin="20,560,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto"  />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Caption}" Height="80" HorizontalAlignment="Left" Name="recentPictureCaption" Width="Auto" FontSize="26" TextAlignment="Left" Margin="0,12,0,0" Foreground="{StaticResource PhoneBorderBrush}" />
                                        <Button Grid.Row="0" Grid.Column="1" Height="Auto" HorizontalAlignment="Right" Content="..." Margin="0,-12,-12,0" Width="100" VerticalAlignment="Center" FontSize="25">              
                                            <toolkit:ContextMenuService.ContextMenu>
                                                <toolkit:ContextMenu>
                                                    <!-- You can suppress tilt on indivudal menu items with TiltEffect.SuppressTilt="True" -->
                                                    <toolkit:MenuItem Header="share" />
                                                    <toolkit:MenuItem Header="flag for review" />
                                                    <toolkit:MenuItem Header="cancel" />
                                                </toolkit:ContextMenu>
                                            </toolkit:ContextMenuService.ContextMenu>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </controls:PanoramaItem>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <controls:PanoramaItem Header="profile">
                    <!--Double line list with image placeholder and text wrapping-->
                    <Grid Margin="0,0,0,75">
                        <Grid Tap="ViewUserDetailTap">
                            <Image Height="130" HorizontalAlignment="Left" Margin="28,9,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="130" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <TextBlock Height="45" HorizontalAlignment="Left" Margin="178,-9,0,0" Name="textBlock1" Text="Joe M." VerticalAlignment="Top" Width="146" FontSize="36" Foreground="{StaticResource PhoneAccentBrush}" />
                            <TextBlock Height="40" HorizontalAlignment="Left" Margin="177,36,0,0" Name="textBlock2" Text="West Lafayette, IN" VerticalAlignment="Top" Width="178" Foreground="#FFBABABA" />
                            <Rectangle Height="65" HorizontalAlignment="Right" Margin="0,73,170,0" Name="rectangle1" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" Fill="{StaticResource PhoneAccentBrush}" />
                            <Rectangle Fill="{StaticResource PhoneAccentBrush}" Height="65" HorizontalAlignment="Right" Margin="0,73,89,0" Name="rectangle2" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" />
                            <Rectangle Fill="{StaticResource PhoneAccentBrush}" Height="65" HorizontalAlignment="Right" Margin="0,73,8,0" Name="rectangle3" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="176,113,0,0" Name="textBlock3" Text="photos" VerticalAlignment="Top" Width="57" FontSize="16" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="250,113,0,0" Name="textBlock4" Text="followers" VerticalAlignment="Top" Width="67" FontSize="16" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="331,113,0,0" Name="textBlock5" Text="following" VerticalAlignment="Top" Width="70" FontSize="16" />
                            <TextBlock Height="43" HorizontalAlignment="Left" Margin="174,75,0,0" Name="textBlock6" Text="52" VerticalAlignment="Top" Width="54" FontSize="32" TextAlignment="Center" />
                            <TextBlock FontSize="32" Height="43" HorizontalAlignment="Left" Margin="255,75,0,0" Name="textBlock7" Text="15" TextAlignment="Center" VerticalAlignment="Top" Width="54" />
                            <TextBlock FontSize="32" Height="43" HorizontalAlignment="Left" Margin="335,75,0,0" Name="textBlock8" Text="5" TextAlignment="Center" VerticalAlignment="Top" Width="54" />
                        </Grid>
                        <Grid Width="370" HorizontalAlignment="Left"  Margin="17,150,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- set Tag equal to index of UserPicture colleciton -->
                            <Image Grid.Row="0" Grid.Column="0" Name="i1" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="0" Grid.Column="1" Name="i2" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="0" Grid.Column="2" Name="i3" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />

                            <Image Grid.Row="1" Grid.Column="0" Name="i4" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="1" Grid.Column="1" Name="i5" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="1" Grid.Column="2" Name="i6" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />

                            <Image Grid.Row="2" Grid.Column="0" Name="i7" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="2" Grid.Column="1" Name="i8" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="2" Grid.Column="2" Name="i9" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />

                            <Image Grid.Row="3" Grid.Column="0" Name="i10" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="3" Grid.Column="1" Name="i11" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="3" Grid.Column="2" Name="i12"  Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />

                            <Image Grid.Row="4" Grid.Column="0" Name="i13"  Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png"/>
                            <Image Grid.Row="4" Grid.Column="1" Name="i14" Width="120" Height="120"  Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png"/>
                            <Image Grid.Row="4" Grid.Column="2" Name="i15" Width="120" Height="120"  Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png"/>

                            <Image Grid.Row="5" Grid.Column="0" Name="i16" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png"/>
                            <Image Grid.Row="5" Grid.Column="1" Name="i17" Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <Image Grid.Row="5" Grid.Column="2" Name="i18"  Width="120" Height="120" Margin="12,12,0,0" Source="/WinstagramPan;component/Images/smallJoe.png"/>

                        </Grid>
                    </Grid>
                </controls:PanoramaItem>
            </ScrollViewer>
        </controls:Panorama>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar x:Name="MainPageAppBar" IsVisible="True" IsMenuEnabled="True" Opacity="0.75">
            <shell:ApplicationBarIconButton IconUri="Images/appbar.camera.png" Text="take photo" Click="ApplicationBarIconButton_Click" />
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="about"/>
                <shell:ApplicationBarMenuItem Text="edit profile" Click="EditProfile_Click" />
                <shell:ApplicationBarMenuItem Text="settings" Click="Settings_Click" />
                <shell:ApplicationBarMenuItem Text="user search" Click="UserSearch_Click" />
                <shell:ApplicationBarMenuItem Text="sign out" Click="SignoutBarIconButton_Click" />
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <!-- sexy transitions -->
    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

</phone:PhoneApplicationPage>