<phone:PhoneApplicationPage 
    x:Class="WinstagramPan.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800" 
    d:DataContext="{d:DesignData SampleData/MainViewModelSampleData.xaml}"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False" Opacity="1">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
 
        <!--Welcome Screen-->
        <Grid x:Name="WelcomeScreen" Visibility="Collapsed" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--ContentPanel - place additional content here-->
            <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,24,12,0" Width="370">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Height="170" Width="170" Background="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" Tap="logInTileTap">
                    <TextBlock Height="54" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Log In" VerticalAlignment="Bottom" FontSize="32" Width="142" />
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1" Height="170" Width="170" Background="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left">
                    <TextBlock Height="54" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Sign Up" VerticalAlignment="Bottom" FontSize="32" Width="142" />
                </Grid>
            </Grid>
        </Grid>

        <!--Panorama control-->
        <controls:Panorama  x:Name="MainContent" Visibility="Visible" Title="winstagram" Background="{StaticResource PhoneBackgroundBrush}" Width="Auto">

            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <!--Panorama item one-->
                <controls:PanoramaItem Header="popular">
                    <Grid Width="370" HorizontalAlignment="Left" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title is username of picture owner -->
                        <!-- Message is ID of picture owner -->

                        <!-- The Hub Tile -->
                        <toolkit:HubTile Grid.Row="1" Grid.Column="0"
                                         Name="popTile1"
                                         Margin="12,12,0,0"
                                         Source="/Images/joe.jpg"
                                         Title="Joe"
                                         Notification="XAML God"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="1" Grid.Column="1" 
                                         Name="popTile2"
                                         Margin="12,12,0,0"
                                         Source="/Images/matt.jpg"
                                         Title="Matt"
                                         Notification="Lync!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="2" Grid.Column="0" 
                                         Name="popTile3"
                                         Margin="12,15,0,5"
                                         Source="/Images/james.jpg"
                                         Title="James"
                                         Notification="Clarity!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="2" Grid.Column="1" 
                                         Name="popTile4"
                                         Margin="12,12,0,0"
                                         Source="/Images/jeremiah.jpg"
                                         Title="Jeremiah"
                                         Notification="Mongo!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="3" Grid.Column="0" 
                                         Name="popTile5"
                                         Margin="12,12,0,0"
                                         Source="/Images/josh.jpg"
                                         Title="Josh"
                                         Notification="En guard!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="3" Grid.Column="1" 
                                         Name="popTile6"
                                         Margin="12,12,0,0"
                                         Source="/Images/shruti.jpg"
                                         Title="Shruti"
                                         Notification="Shrutigram!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="4" Grid.Column="0" 
                                         Name="popTile7"
                                         Margin="12,12,0,0"
                                         Source="/Images/microsoft.jpg"
                                         Title="Microsoft"
                                         Notification="Windows 8 is here!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="4" Grid.Column="1" 
                                         Name="popTile8"
                                         Margin="12,12,0,0"
                                         Source="/Images/seattle.jpg"
                                         Title="Seattle"
                                         Notification="Space Needle"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="5" Grid.Column="0" 
                                         Name="popTile9"
                                         Margin="12,12,0,0"
                                         Source="/Images/purdue.jpg"
                                         Title="Purdue"
                                         Notification="Boiler up!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                        <toolkit:HubTile Grid.Row="5" Grid.Column="1" 
                                         Name="popTile10"
                                         Margin="12,12,0,0"
                                         Source="/Images/windowsphone.jpg"
                                         Title="Windows Phone"
                                         Notification="Love me some Mango!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                    </Grid>
                </controls:PanoramaItem>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <!--NEWS FEED-->
                <controls:PanoramaItem Header="news feed">
                    <ListBox Name="feed" IsEnabled="True" IsHitTestVisible="True" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Margin="20,0,0,0" Height="90" HorizontalAlignment="Left" Name="recentPictureOwner" Stretch="Fill" VerticalAlignment="Top" Width="90" Source="/WinstagramPan;component/Images/smallJoe.png" Tap="ViewUserDetailTap" />
                                    <TextBlock Margin="118,27,0,0" Text="{Binding Username}"  Height="38" Name="recentPictureUsername" VerticalAlignment="Top" FontSize="26" Foreground="{StaticResource PhoneBorderBrush}" Tap="ViewUserDetailTap" />
                                    <Image Margin="20,100,0,0"  Source="{Binding Photo.Source}"  Height="400" HorizontalAlignment="Left" Name="recentPicture" Stretch="Fill" VerticalAlignment="Top" Width="400" Tap="newsFeedPictureTap" Tag="{Binding PictureID}" />
                                    <TextBlock Margin="20,520,0,0" Text="{Binding Caption}" Height="80" HorizontalAlignment="Left" Name="recentPictureCaption" VerticalAlignment="Top" Width="400" FontSize="26" Foreground="{StaticResource PhoneAccentBrush}" TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </controls:PanoramaItem>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <controls:PanoramaItem Header="profile">
                    <!--Double line list with image placeholder and text wrapping-->
                    <Grid>
                        <Grid Tap="ViewUserDetailTap">
                            <Image Height="130" HorizontalAlignment="Left" Margin="28,9,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="130" Source="/WinstagramPan;component/Images/smallJoe.png" />
                            <TextBlock Height="45" HorizontalAlignment="Left" Margin="178,-9,0,0" Name="textBlock1" Text="Joe M." VerticalAlignment="Top" Width="146" FontSize="36" Foreground="{StaticResource PhoneAccentBrush}" />
                            <TextBlock Height="40" HorizontalAlignment="Left" Margin="177,36,0,0" Name="textBlock2" Text="West Lafayette, IN" VerticalAlignment="Top" Width="178" Foreground="#FFBABABA" />
                            <Rectangle Height="65" HorizontalAlignment="Right" Margin="0,73,170,0" Name="rectangle1" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" Fill="{StaticResource PhoneAccentBrush}" />
                            <Rectangle Fill="{StaticResource PhoneAccentBrush}" Height="65" HorizontalAlignment="Right" Margin="0,73,89,0" Name="rectangle2" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" />
                            <Rectangle Fill="{StaticResource PhoneAccentBrush}" Height="65" HorizontalAlignment="Right" Margin="0,73,8,0" Name="rectangle3" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="75" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="176,113,0,0" Name="textBlock3" Text="photos" VerticalAlignment="Top" Width="57" FontSize="16" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="250,113,0,0" Name="textBlock4" Text="followers" VerticalAlignment="Top" Width="67" FontSize="16" />
                            <TextBlock Height="29" HorizontalAlignment="Left" Margin="331,113,0,0" Name="textBlock5" Text="following" VerticalAlignment="Top" Width="70" FontSize="16" />
                            <TextBlock Height="43" HorizontalAlignment="Left" Margin="174,75,0,0" Name="textBlock6" Text="52" VerticalAlignment="Top" Width="54" FontSize="32" TextAlignment="Center" />
                            <TextBlock FontSize="32" Height="43" HorizontalAlignment="Left" Margin="255,75,0,0" Name="textBlock7" Text="15" TextAlignment="Center" VerticalAlignment="Top" Width="54" />
                            <TextBlock FontSize="32" Height="43" HorizontalAlignment="Left" Margin="335,75,0,0" Name="textBlock8" Text="5" TextAlignment="Center" VerticalAlignment="Top" Width="54" />
                        </Grid>
                        <Grid Width="370" HorizontalAlignment="Left"  Margin="17,150,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Title is username of picture owner -->
                                <!-- Message is ID of picture owner -->

                                <!-- The Hub Tile -->
                                <toolkit:HubTile Grid.Row="1" Grid.Column="0" 
                                         Margin="12,12,0,0"
                                         Source="/Images/joe.jpg"
                                         Title="Joe"
                                         Notification="XAML God"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="1" Grid.Column="1" 
                                         Margin="12,12,0,0"
                                         Source="/Images/matt.jpg"
                                         Title="Matt"
                                         Notification="Lync!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="2" Grid.Column="0" 
                                         Margin="12,15,0,5"
                                         Source="/Images/james.jpg"
                                         Title="James"
                                         Notification="Clarity!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="2" Grid.Column="1" 
                                         Margin="12,12,0,0"
                                         Source="/Images/jeremiah.jpg"
                                         Title="Jeremiah"
                                         Notification="Mongo!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="3" Grid.Column="0" 
                                         Margin="12,12,0,0"
                                         Source="/Images/josh.jpg"
                                         Title="Josh"
                                         Notification="En guard!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="3" Grid.Column="1" 
                                         Margin="12,12,0,0"
                                         Source="/Images/shruti.jpg"
                                         Title="Shruti"
                                         Notification="Shrutigram!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="4" Grid.Column="0" 
                                         Margin="12,12,0,0"
                                         Source="/Images/microsoft.jpg"
                                         Title="Microsoft"
                                         Notification="Windows 8 is here!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="4" Grid.Column="1" 
                                         Margin="12,12,0,0"
                                         Source="/Images/seattle.jpg"
                                         Title="Seattle"
                                         Notification="Space Needle"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="5" Grid.Column="0" 
                                         Margin="12,12,0,0"
                                         Source="/Images/purdue.jpg"
                                         Title="Purdue"
                                         Notification="Boiler up!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                                <toolkit:HubTile Grid.Row="5" Grid.Column="1" 
                                         Margin="12,12,0,0"
                                         Source="/Images/windowsphone.jpg"
                                         Title="Windows Phone"
                                         Notification="Love me some Mango!"
                                         DisplayNotification="True"
                                         GroupTag="Pic" Tap="hubTilePictureTap" 
                                         Message="ownerID" />
                            </Grid>
                    </Grid>
                </controls:PanoramaItem>
            </ScrollViewer>
        </controls:Panorama>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar x:Name="MainPageAppBar" IsVisible="True" IsMenuEnabled="True" Opacity="0.75">
            <shell:ApplicationBarIconButton IconUri="Images/appbar.camera.png" Text="take photo" Click="ApplicationBarIconButton_Click" />
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="about"/>
                <shell:ApplicationBarMenuItem Text="edit profile"/>
                <shell:ApplicationBarMenuItem Text="settings" Click="Settings_Click" />
                <shell:ApplicationBarMenuItem Text="user search" Click="UserSearch_Click" />
                <shell:ApplicationBarMenuItem Text="sign out" Click="SignoutBarIconButton_Click" />
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <!-- sexy transitions -->
    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>
    
</phone:PhoneApplicationPage>