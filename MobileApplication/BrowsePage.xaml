                                         DisplayNotification="True"
                                         GroupTag="Pic"
                                         Message="pictureID" Style="{StaticResource SmallHubTile}" />
                <toolkit:HubTile Grid.Row="5" Grid.Column="0" 
                                         Name="popTile9"
                                         Margin="12,12,0,0"
                                         Source="/Images/purdue.jpg"
                                         Title="Purdue"
                                         Notification="Boiler up!"
                                         DisplayNotification="True"
                                         GroupTag="Pic"
                                         Message="pictureID" Style="{StaticResource SmallHubTile}" />
